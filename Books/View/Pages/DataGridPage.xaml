<Page x:Class="Books.View.Pages.DataGridPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Books.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataGridPage" Loaded="Page_Loaded">

    <Grid>
        <DataGrid Name="BooksDg" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding }"/>
                <DataGridTextColumn Header="№" Binding="{Binding Rank}" />
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" />
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" />
                <DataGridTextColumn Header="Год публикации" Binding="{Binding Published}" />
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" />
                <DataGridTextColumn Header="Ориг. язык" Binding="{Binding OriginalLanguage}" />
                <DataGridTextColumn Header="Страницы" Binding="{Binding PageRange}" />
                <DataGridTextColumn Header="Кол-во слов" Binding="{Binding WordCount}" />
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
